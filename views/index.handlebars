<div class="container">

  <h2>2016 Stats</h2>
  <ul class="nav nav-tabs" data-tabs="tabs">
    <li class="active"><a data-toggle="tab" href="#qbs">Quarterbacks</a></li>
    <li><a data-toggle="tab" href="#rbs">Runningbacks</a></li>
    <li><a data-toggle="tab" href="#wrs">Wide Receivers</a></li>
    <li><a data-toggle="tab" href="#tes">Tight Ends</a></li>
    <li><a data-toggle="tab" href="#def">Defense</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="qbs">
      <table>
        <tr>
          <th>Player</th>
          <th>Team</th>
          <th>PassYds</th>
          <th>Att</th>
          <th>Comp</th>
          <th>PassComp%</th>
          <th>TDS</th>
          <th>INTs</th>
          <th>RushYds</th>
          <th>RushTds</th>
          <th>Games</th>
        </tr>
        {{#if this.user}}
        {{#each quarterbacks}}
        <tr>
          <td>{{this.player}}</td>
          <td>{{this.team}}</td>
          <td>{{this.passydsgm}}</td>
          <td>{{this.att}}</td>
          <td>{{this.comp}}</td>
          <td>{{this.passcomp}}</td>
          <td>{{this.tds}}</td>
          <td>{{this.interceptions}}</td>
          <td>{{this.rushyds}}</td>
          <td>{{this.rushtds}}</td>
          <td>{{this.games}}</td>
          <td>
            <form class="player-form" data-player-name="{{this.player}}" data-player="{{this.id}}" data-type="quarterback">
              <input type="hidden" name="playerable_id" value="{{this.id}}" class="add">
              <input type="hidden" name="playerable_type" value="quarterbacks" class="add">
              <button type="submit">Add Player</button>
            </form>
          </td>
        </tr>
        {{/each}}
        {{else}}
        {{#each quarterbacks}}
        <tr>
          <td>{{this.player}}</td>
